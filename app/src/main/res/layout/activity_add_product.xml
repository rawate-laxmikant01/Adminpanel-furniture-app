<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddProduct">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/SetProductImg"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/SetProductImg"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Product Details"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Name:"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/SetproductName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Product name"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Mrp price :"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/Setproductmrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Product Mrp price"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Price:"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/SetProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Product Price"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Quantity:"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/SetproductQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Product Quantity"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Description:"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/SetProductDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Product Description"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Brand :"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/Brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Product Brand"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product color :"
                        android:layout_weight="1"/>
                    <EditText
                        android:id="@+id/color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Product color"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Category :"
                        android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/category"
                        android:layout_width="100dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:hint="Product category"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"/>

                </LinearLayout>


                <Button
                    android:id="@+id/btnAddProduct"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                    android:text="Add Product" />



            </LinearLayout>


        </LinearLayout>









    </ScrollView>

